{
  "compilerOptions": {
    "baseUrl": ".", // обязательно
    "paths": {
      "@/*": ["src/*"],
      "src/*": ["src/*"]
    },
    "target": "ES6",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
