echo "üìù –ü—Ä–æ–≤–µ—Ä–∫–∞ —Ñ–æ—Ä–º–∞—Ç–∞ —Å–æ–æ–±—â–µ–Ω–∏—è –∫–æ–º–º–∏—Ç–∞..."

commit_msg=$(cat "$1")

if [ -z "$commit_msg" ]; then
    echo "–û—à–∏–±–∫–∞: –°–æ–æ–±—â–µ–Ω–∏–µ –∫–æ–º–º–∏—Ç–∞ –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å –ø—É—Å—Ç—ã–º!"
    exit 1
fi

if [ ${#commit_msg} -lt 10 ]; then
    echo "–û—à–∏–±–∫–∞: –°–æ–æ–±—â–µ–Ω–∏–µ –∫–æ–º–º–∏—Ç–∞ —Å–ª–∏—à–∫–æ–º –∫–æ—Ä–æ—Ç–∫–æ–µ (–º–∏–Ω–∏–º—É–º 10 —Å–∏–º–≤–æ–ª–æ–≤)!"
    echo "–¢–µ–∫—É—â–µ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ: '$commit_msg'"
    exit 1
fi

first_line=$(echo "$commit_msg" | head -n 1)
if [ ${#first_line} -gt 72 ]; then
    echo "–û—à–∏–±–∫–∞: –ü–µ—Ä–≤–∞—è —Å—Ç—Ä–æ–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏—è –∫–æ–º–º–∏—Ç–∞ —Å–ª–∏—à–∫–æ–º –¥–ª–∏–Ω–Ω–∞—è (–º–∞–∫—Å–∏–º—É–º 72 —Å–∏–º–≤–æ–ª–∞)!"
    echo "–¢–µ–∫—É—â–∞—è –¥–ª–∏–Ω–∞: ${#first_line} —Å–∏–º–≤–æ–ª–æ–≤"
    exit 1
fi

echo "–§–æ—Ä–º–∞—Ç —Å–æ–æ–±—â–µ–Ω–∏—è –∫–æ–º–º–∏—Ç–∞ –∫–æ—Ä—Ä–µ–∫—Ç–µ–Ω!" 